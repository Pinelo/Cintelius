<!-- recibe un objecto combo en f -->
<% if f.status == "ready" %>
	<div class="combo_box ready">
		<div class="product_list_area">
			<% f.combo_products.each do |product| %>
				<div class="product_name_box">
					<%= product.name %>
				</div>
			<% end %>	
		</div>
		$
		<div class="price_box">
			<%= f.price %>
		</div>
	</div>
<%= elsif f.status == "locked" %>
	<div class="combo_box locked">
		<div class="product_list_area">
			<% f.combo_products.each do |product| %>
				<div class="product_name_box">
					<%= product.name %>
				</div>
			<% end %>	
		</div>
		$
		<div class="price_box">
			<%= f.price %>
		</div>
	</div>
<%= elsif f.status == "received" %>
	<div class="combo_box received">
		<div class="product_list_area">
			<% f.combo_products.each do |product| %>
				<div class="product_name_box">
					<%= product.name %>
				</div>
			<% end %>	
		</div>
		$
		<div class="price_box">
			<%= f.price %>
		</div>
	</div>
<% end %>