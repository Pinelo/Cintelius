<!-- recibe una oferta en f -->
<div class='sent offer_product_box', data-attribute-offer-id="<%= f.id %>", data-attribute-product-name="<%= f.product.name %>">

	<div class="left_side">
		<div class="product_name_box">
			<!-- color del circulo debe indicar el estado de la oferta { -->
			<div class="status_circle <%= f.complete_status %>" data-offer-id="<%= f.id %>">
				<%= button_tag "+", class: "combo_product_add_button", data: {product_id: f.product.id, product_name: f.product.name} if f.order.is_open? %>
			</div>
			<span style="float:left;margin-top:11%;"><%= f.product.name %></span>
		</div>
		<div class="offer_numbers_box">
			<div class="unit_container">
				<span style="float:left;margin-top: -2%;margin-left:5%">Kg:</span>
				<div class="background_box units" data-product-id="<%= f.product.id %>" ><%= f.offer_details.last.units %></div>
			</div>
				<div class="total_price_container">
					<div class="unit_code" style="float: left; margin-top: -2%; margin-left: 5%;">Total</div>
					<div class="currency_code"><%= t 'currency_code' %>:</div>
					<div class="background_box total_price"> <%= f.total_price %></div>  
				</div>
		</div>
	</div>	

	<div class="right_side">						
		<div class="comment_box">
			<div class="seller_comment">
				<%= f.comment.content %>
			</div>
		</div>
					
	</div>
</div>



