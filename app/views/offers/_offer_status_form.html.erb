<% elsif f.status == 'pending' %>
	<div class="offer_product_box form_for pending">
	<% offer_detail_object = f.offer_details.last %>
	<%= form_for f, url: {action: 'update'}, html: {
			class: 'status_offer_form pending'} do |offer|%>

			<div class="left_side">

				<div class="product_name_box">
					Producto <br>
					<div class="background_box">
						<%= f.product.name %>
					</div>

					<div class="offer_numbers_box">
						<span style="float:left;">Kg</span>
						<div class="background_box">
							<%= units = f.offer_details.last.units %>
						</div>
						<span style="margin-left:3%">Contraoferta:</span>
						<div class="form_box_inside_numbers">
							<%= offer.fields_for offer_detail_object do |offer_detail_fields| %>
								<span style="margin-left:3%; float:left;">Kg</span>
								<div class="background_box">
									<%= offer_detail_object.units %>
								</div>
							<% end %>
							<span style="float:left; margin-left: 7%;">$</span>
								<div class="background_box">
									<%= f.unitary_price %>
								</div>
						</div>
					</div>

				</div>			
			</div>
			<div class="right_side">
					<%= button_tag "+", class: "combo_product_add_button", data: {product_id: f.product.id} unless order_status%>
					<%= button_tag "Cliente", class: "buyer_comment_tag" %>
					<%= button_tag "Tu Comentario", class: "seller_comment_tag" %>
					<span class="unitary_price_notice">* Precio por kilo</span>
					<div class="comment_box">
						<div class="buyer_comment">
							<%= f.order.order_products.where(product_id: f.product_id).first.comment.content %>
						</div>
						<div class="seller_comment">							
							<%= f.comment.content %>
						</div>
					</div>
				</div>

			<div class="offer_comment_area">
				
			</div>
			
			<%= offer.submit "Aceptar", class: "submit_button" %>
			<%= offer.submit "Rechazar", class: "submit_button" %>
		<% end %>
	</div>

