
<% if f.status == 'ready' %>
<!-- El provedor mando la oferta y no ha respondido el comprador -->
	<div class='offer_product_box ready'>
			<div class="left_side">
				<div class="product_name_box">
					Producto <br>
					<div class="background_box">
						<%= f.product.name %>
					</div>
				</div>
				<div class="offer_numbers_box">
					<span style="float:left;">Kg</span>
					<div class="background_box">
						<%= f.offer_details.last.units %>
					</div>
					<span style="float:left; margin-left: 7%;">$</span>
					<div class="background_box">
						<%= f.unitary_price %>
					</div>
				</div>
			</div>
			<div class="right_side">
				<%= button_tag "+", class: "combo_product_add_button", data: {product_id: f.product.id} unless order_status%>
				<%= button_tag "Cliente", class: "buyer_comment_tag" %>
				<%= button_tag "Tu Comentario", class: "seller_comment_tag" %>
				<div class="comment_box">
					<div class="buyer_comment">
						<%= f.order.order_products.where(product_id: f.product.id).first.comment.content %>
					</div>
					<div class="seller_comment">
						<%= f.comment.content %>
					</div>
				</div>
							
			</div>
	</div>
