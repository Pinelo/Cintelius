<% elsif f.status == 'pending' %>
	<%= form_for f, url: {action: 'update'}, html: {
			class: 'status_offer_form pending'} do |offer|%>
			Producto
			<%= f.product.name %>
			Kg <br>
			Tu Oferta <%= f.offer_details.where(status: "provider").last %>
			<%= button_tag "+", class: "combo_product_add_button", data: {product_id: f.product.id}%>
			Comprador<%= f.offer_details.last.units %> <br>
			Precio Unitario <br>
			<%= f.unitary_price %>	
			
			<div class="comment_box">
				<%= f.order.order_products.where(product_id: f.product.id).first.comment.content %>
			</div>
		<%= offer.submit 'Aceptar' %>
	<% end %>

