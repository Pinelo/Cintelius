<!-- recibe una oferta en f -->
<div class='selected_offer_box' data-offer-id="<%= f.id %>">
	<div class="provider_name_box">
		<%= f.organization %>
	</div>

	<div class="options_box">
		<%= button_tag "", class: "offer_deselection_button", 
					data: {offer_id: f.id, product_id: f.product.id} do%> 
					 <%= image_tag "icons/icon-x.png"%>
		<% end %>
	</div>

	<div class="product_name_box">
		<%= f.product_name %>
	</div>

	<div class="unit_box">
		<span class="unit_code">Kg:</span>
		<%= f.units %>
	</div>

	<div class="unitary_price_box">
		<span class="unit_code">Unitario</span>
		<span class="unit_code" style="color:#C8C8C8;"><%= t 'currency_code' %>:</span>
		<%= f.unitary_price %>
	</div>

	<div class="total_price_box">
		<span class="unit_code">Total:</span>
		<%= f.total_price %>
	</div>
			
		
</div>
