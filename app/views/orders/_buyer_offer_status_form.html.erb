
<% if f.status == 'ready' && f.offer_details.last.status == "both"%>
		<div class='offer_product_box accepted', data-attribute-user-id="<%= f.user_id %>", 
			data-attribute-offer-id="<%= f.id %>", data-attribute-product-name="<%= f.product.name %>">
			<div class="left_side">
				<div class="product_name_box">
					<!-- Producto <br> -->
					<div class="background_box">
						<%= f.product.name %>
					</div>
				</div>
				<div class="offer_numbers_box">
					<span style="float:left;">Kg</span>
					<div class="background_box" data-product-id="<%= f.product.id %>"><%= f.offer_details.last.units %></div>
					<span style="float:left; margin-left: 7%;">$</span>
					<div class="background_box">
						<%= f.unitary_price %>
					</div>
				</div>

			</div>
			<div class="right_side">				
				<%= button_tag "Comentario", class: "seller_comment_tag" %>
				<%= button_tag "+", class: "offer_selection_button", data: {offer_id: f.id, product_id: f.product.id}%>
				<div class="comment_box">
					<div class="seller_comment">
						<%= f.comment.content %>
					</div>
				</div>
							
			</div>
		</div>
