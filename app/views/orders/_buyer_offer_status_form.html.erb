<!-- El provedor mando la oferta y no ha respondido el comprador -->
	<div class='offer_product_box ready', data-attribute-user-id="<%= f.user_id %>", 
		data-attribute-offer-id="<%= f.id %>", data-attribute-product-name="<%= f.product.name %>">
			<div class="left_side">
				<div class="product_name_box">
					<!-- Producto <br> -->
